<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Accueil</title>
</head>
<body>
    <div class="container-fluid m-5">
        
        
        <div class="container">
            <div class=" row">
                <div class="col-12 col-md-3">
                    <form action="/players" method="post">
                        <input type="hidden" name="id" id="id">
                        <label for="nom">nom</label>  <br>
                        <input type="text" id="nom" required name="nom"> <br>
                        <label for="Wins">Wins</label> <br>
                        <input type="number" id="wins" required name="wins"> <br>
                        <label for="losses">Losses</label> <br>
                        <input type="number" id="losses" required name="losses"> <br>
                        <label for="score">Scores</label> <br>
                        <input type="number" id="scores" required name="scores"> <br>
                        <label for="club">Club</label> <br>
                        <input type="text" id="club" required name="club"> <br>
                        <br>
                        <input type="submit" value="Enregistrer" onclick="">
                    </form>
                </div>
                <div class="col-12 offset-md-1 col-md-8">
                    <h2>Liste des Joueurs</h2>
        
        
                    <table style="width: 90%; border: solid;" >
                        <tr>
                            <th>Nom</th><th>Wins</th><th>Losses</th><th>Scores</th><th>club</th><th>Action</th>
                        </tr>
                    <% for(i=0; i<resultat.length; i++) { %>
        
                        
                            <tr>
                                <td><%= resultat[i].Nom %></td>
                        <td><%= resultat[i].wins %></td>
                        <td><%= resultat[i].losses %></td>
                        <td><%= resultat[i].scores %></td>
                        <td><%= resultat[i].club %></td>
                        <td>
                                    <input type="button" class="btn btn-danger" value="Supprimer" onclick="supprimer('<%= resultat[i].id %>')">
                                    <input type="button" class="btn btn-success" value="Modifier" onclick="remplirDonnees('<%= resultat[i].id %>','<%= resultat[i].Nom %>', '<%= resultat[i].wins %>', '<%= resultat[i].losses %>', '<%= resultat[i].scores %>', '<%= resultat[i].club %>' )">
                        </td>
                            </tr>
                    <% } %>
        
                        </table>
        
                        
        
           
                    </div>
                
            </div>
        </div>
    </div>
</body>

<script>
    function remplirDonnees(id, nom, wins,losses,scores,club) {
        document.getElementById('id').value = id;
        document.getElementById('nom').value = nom;
        document.getElementById('wins').value = wins;
        document.getElementById('losses').value = losses;
        document.getElementById('scores').value = scores;
        document.getElementById('club').value = club;

    }

    function supprimer(id) {

        let pointFinal = "players/" + id
        fetch(
            pointFinal, {method : "DELETE"}
        ).then(
            (reponse)=> reponse.json()
        ).then(
            (donnee)=> window.location.href = donnee.routeRacine
        ).catch((erreur)=> console.log(erreur))
        
    }
</script>
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</html>